# ===========================================
# SISTEMA DE GESTAO RA - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Application
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
APP_NAME=Sistema de Gest√£o RA

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sistema_ra_dev
# For production, use a strong password and secure connection:
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev

# Email (optional - for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@ra-engenharia.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Session (if using sessions)
SESSION_SECRET=your-session-secret-key-here

# External APIs (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Monitoring (optional)
# SENTRY_DSN=

# Timezone
TZ=America/Sao_Paulo
